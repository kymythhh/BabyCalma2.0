<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFCF5"
    tools:context=".Dashboard">


    <!--  FIXED HEADER  -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_margin="12dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="#F2F2F2">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp">


            <!-- Avatar -->
            <TextView
                android:id="@+id/FirstLetter"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:gravity="center"
                android:text="U"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/avatar"/>


            <!-- Name + Greeting -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/ProfileUsername"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="User"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000"/>


                <TextView
                    android:id="@+id/greeting"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Welcome! ðŸ‘‹"
                    android:textSize="13sp"
                    android:textStyle="italic"
                    android:textColor="#777777"/>
            </LinearLayout>


            <!-- Logout -->
            <Button
                android:id="@+id/btnLogout"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Logout"
                android:textSize="13sp"
                android:textColor="#9B1C1C"
                android:backgroundTint="#F6C1C1"/>


        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Gradient Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/gradientpink_bg"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            app:cardBackgroundColor="#20FFFFFF"
                            app:strokeColor="#50FFFFFF"
                            app:strokeWidth="1dp"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="0dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingHorizontal="16dp"
                                android:paddingVertical="10dp">

                                <TextView
                                    android:id="@+id/day"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#ffffff"
                                    android:textStyle="bold"/>

                                <TextView
                                    android:id="@+id/datetoday"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#ffffff"/>

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/greetingText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="GOOD EVENING,"
                                android:textColor="#ffffff"
                                android:textSize="25dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/greetingUn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" USER"
                                android:textColor="#ffffff"
                                android:textSize="25dp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" Time to unwind and reflect"
                            android:textColor="#ffffff"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" âœ¨ You earned this moment"
                            android:textColor="#ffffff"
                            android:textStyle="bold" />

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            app:cardBackgroundColor="#20FFFFFF"
                            app:strokeColor="#40FFFFFF"
                            app:strokeWidth="1dp"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="24dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="âœ¨"
                                    android:textSize="32sp" />

                                <TextView
                                    android:id="@+id/tvWellnessScore"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="0%"
                                    android:textColor="#ffffff"
                                    android:textSize="36sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Wellness Score"
                                    android:textColor="#ffffff"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="Start strong!"
                                    android:textColor="#ffffff"
                                    android:textSize="13sp" />

                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <!-- TODAY'S PROGRESS -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#FFF7B2">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Today's Progress"
                            android:textColor="#fedc56"
                            android:textStyle="bold"
                            android:textSize="18sp" />


                        <!-- ROW 1 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="12dp">


                            <!-- WATER -->
                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_margin="8dp"
                                app:cardBackgroundColor="#ffffe0"
                                app:cardCornerRadius="16dp">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="12dp">


                                    <TextView
                                        android:layout_height="wrap_content"
                                        android:layout_width="wrap_content"
                                        android:text="Water"
                                        android:textStyle="bold"/>


                                    <TextView
                                        android:id="@+id/tvSummaryWater"
                                        android:layout_height="wrap_content"
                                        android:layout_width="wrap_content"
                                        android:text="0/8"
                                        android:textSize="18sp"/>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>


                            <!-- FOCUS -->
                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_margin="8dp"
                                app:cardBackgroundColor="#ffffe0"
                                app:cardCornerRadius="16dp">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="12dp">


                                    <TextView
                                        android:layout_height="wrap_content"
                                        android:layout_width="wrap_content"
                                        android:text="Focus"
                                        android:textStyle="bold"/>


                                    <TextView
                                        android:id="@+id/tvSummaryFocus"
                                        android:layout_height="wrap_content"
                                        android:layout_width="wrap_content"
                                        android:text="0m"
                                        android:textSize="18sp"/>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>


                        <!-- ROW 2 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <!-- BREATHS -->
                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_margin="8dp"
                                app:cardBackgroundColor="#ffffe0"
                                app:cardCornerRadius="16dp">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="12dp">


                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Breaths"
                                        android:textStyle="bold" />


                                    <TextView
                                        android:id="@+id/tvSummaryBreaths"
                                        android:layout_height="wrap_content"
                                        android:layout_width="wrap_content"
                                        android:text="0"
                                        android:textSize="18sp"/>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>


                            <!-- RELEASE (LANTERN) -->
                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_margin="8dp"
                                app:cardBackgroundColor="#ffffe0"
                                app:cardCornerRadius="16dp">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="12dp">


                                    <TextView
                                        android:layout_height="wrap_content"
                                        android:layout_width="wrap_content"
                                        android:text="Release"
                                        android:textStyle="bold"/>


                                    <TextView
                                        android:id="@+id/tvSummaryRelease"
                                        android:layout_height="wrap_content"
                                        android:layout_width="wrap_content"
                                        android:text="0"
                                        android:textSize="18sp"/>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- DAILY AFFIRMATION -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#FFB6C1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="20dp"
                        android:gravity="center_vertical">

                        <!-- Heart Icon -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            app:cardCornerRadius="24dp"
                            app:cardBackgroundColor="#FF71A4"
                            app:cardElevation="2dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/posoh"
                                android:scaleType="centerCrop"
                                android:contentDescription="Daily Affirmation Icon"/>
                        </androidx.cardview.widget.CardView>

                        <!-- Text Content -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="16dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Daily Affirmation"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"/>

                            <TextView
                                android:id="@+id/tvDailyAffirmation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Ako'y tahimik lang sa umpisa"
                                android:textSize="14sp"
                                android:textColor="#FFFFFF"
                                android:alpha="0.9"/>
                        </LinearLayout>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- WATER INTAKE -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="#EAF7FF">

                        <!-- pababa -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <!-- pagilid para may pic -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="37dp"
                                    android:layout_height="34dp"
                                    android:src="@drawable/watuh" />

                                <TextView
                                    android:id="@+id/WaterTitle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Water Intake"
                                    android:textStyle="bold"
                                    android:layout_marginLeft="5dp"
                                    android:textColor="#4a90a3"
                                    android:textSize="20sp" />

                            </LinearLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp">

                                <TextView
                                    android:id="@+id/tvWaterCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textStyle="bold"
                                    android:textColor="#4a90a3"
                                    android:textSize="30sp" />

                                <ImageButton
                                    android:id="@+id/btnAddWater"
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:layout_alignParentEnd="true"
                                    android:background="@drawable/add"
                                    android:contentDescription="buttondapat"
                                    />
                            </RelativeLayout>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="glasses today â€¢ Goal: 8"
                                android:textColor="#4a90a3"
                                />

                            <LinearLayout
                                android:id="@+id/waterProgressLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="12dp">

                                <View android:id="@+id/bar1" style="@style/WaterBar"/>
                                <View android:id="@+id/bar2" style="@style/WaterBar"/>
                                <View android:id="@+id/bar3" style="@style/WaterBar"/>
                                <View android:id="@+id/bar4" style="@style/WaterBar"/>
                                <View android:id="@+id/bar5" style="@style/WaterBar"/>
                                <View android:id="@+id/bar6" style="@style/WaterBar"/>
                                <View android:id="@+id/bar7" style="@style/WaterBar"/>
                                <View android:id="@+id/bar8" style="@style/WaterBar"/>

                            </LinearLayout>
                        </LinearLayout>


                    </com.google.android.material.card.MaterialCardView>

                    <!-- BREATHING BUTTON -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="20dp"
                        app:cardBackgroundColor="#ffd6a5">

                        <!-- pababa -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <!-- pagilid para may pic -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="41dp"
                                    android:layout_height="41dp"
                                    android:src="@drawable/amihan" />

                                <TextView
                                    android:id="@+id/BreathingTitle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="6dp"
                                    android:text="Breathing"
                                    android:textStyle="bold"
                                    android:layout_marginLeft="5dp"
                                    android:textColor="#d28800"
                                    android:textSize="20sp" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/Kalma"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Calm your mind"
                                android:textColor="#d28800"
                                android:layout_marginTop="5dp"
                                android:textSize="14sp" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/tvBreathingCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0 cycles"
                                    android:textColor="#d28800"
                                    android:textStyle="bold"
                                    android:textSize="25sp" />

                                <ImageButton
                                    android:id="@+id/btnAddBreathing"
                                    android:layout_width="50dp"
                                    android:layout_height="52dp"
                                    android:layout_alignParentEnd="true"
                                    android:background="@drawable/amihan"
                                    android:contentDescription="buttondapat" />
                            </RelativeLayout>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- FOCUS -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="20dp"
                        app:cardBackgroundColor="#dedaf4">

                        <!-- pababa -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <!-- pagilid para may pic -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="41dp"
                                    android:layout_height="41dp"
                                    android:src="@drawable/orasan" />

                                <TextView
                                    android:id="@+id/FocusTitle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="6dp"
                                    android:text="Re-Focus"
                                    android:textStyle="bold"
                                    android:layout_marginLeft="5dp"
                                    android:textColor="#8d7cb9"
                                    android:textSize="20sp" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/Pokus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Stay Productive"
                                android:textColor="#8d7cb9"
                                android:layout_marginTop="5dp"
                                android:textSize="14sp" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/tvFocusCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0m today"
                                    android:textColor="#8d7cb9"
                                    android:textStyle="bold"
                                    android:textSize="25sp" />

                                <ImageButton
                                    android:id="@+id/btnAddFocus"
                                    android:layout_width="50dp"
                                    android:layout_height="52dp"
                                    android:layout_alignParentEnd="true"
                                    android:background="@drawable/orasan"
                                    android:contentDescription="buttondapat" />
                            </RelativeLayout>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- STRESS RELEASE / LANTERN -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/stressReleaseCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="20dp"
                        app:cardBackgroundColor="#34495E">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <!-- Header Row with Icon and Title -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="8dp">

                                <!-- Sun/Stress Icon -->
                                <androidx.cardview.widget.CardView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    app:cardCornerRadius="20dp"
                                    app:cardBackgroundColor="#F39C12"
                                    app:cardElevation="0dp">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:text="â˜€ï¸"
                                        android:textSize="20sp"
                                        android:gravity="center"/>
                                </androidx.cardview.widget.CardView>

                                <!-- Title -->
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginStart="12dp"
                                    android:text="Stress Release"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:textColor="#F39C12"/>

                                <!-- NEW Badge -->
                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:cardCornerRadius="8dp"
                                    app:cardBackgroundColor="#E74C3C"
                                    app:cardElevation="0dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="NEW"
                                        android:textSize="10sp"
                                        android:textStyle="bold"
                                        android:textColor="@android:color/white"
                                        android:paddingStart="8dp"
                                        android:paddingEnd="8dp"
                                        android:paddingTop="2dp"
                                        android:paddingBottom="2dp"/>
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>

                            <!-- Content Row -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <!-- Left Side - Text -->
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
